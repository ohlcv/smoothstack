# 应用环境
ENV=development

# 数据库配置
SMOOTHSTACK_DATABASE_URL=sqlite:///data/smoothstack.db
SMOOTHSTACK_DATABASE_POOL_SIZE=5
SMOOTHSTACK_DATABASE_MAX_OVERFLOW=10

# API 配置
SMOOTHSTACK_API_HOST=0.0.0.0
SMOOTHSTACK_API_PORT=5000
SMOOTHSTACK_API_CORS_ORIGINS=["*"]
SMOOTHSTACK_API_RATE_LIMIT=100

# 安全配置
SMOOTHSTACK_SECURITY_SECRET_KEY=your-secret-key-here
SMOOTHSTACK_SECURITY_TOKEN_EXPIRE=3600

# Redis 配置
SMOOTHSTACK_SERVICES_REDIS_HOST=localhost
SMOOTHSTACK_SERVICES_REDIS_PORT=6379
SMOOTHSTACK_SERVICES_REDIS_PASSWORD=
SMOOTHSTACK_SERVICES_REDIS_SSL=false

# 邮件配置
SMOOTHSTACK_EMAIL_SMTP_HOST=smtp.example.com
SMOOTHSTACK_EMAIL_SMTP_PORT=587
SMOOTHSTACK_EMAIL_SMTP_USER=your-email@example.com
SMOOTHSTACK_EMAIL_SMTP_PASSWORD=your-password
SMOOTHSTACK_EMAIL_DEFAULT_FROM=noreply@example.com

# 监控配置
SMOOTHSTACK_MONITORING_ENABLED=false
SMOOTHSTACK_MONITORING_METRICS_PORT=9090

# 日志配置
SMOOTHSTACK_LOGGING_LEVEL=INFO
SMOOTHSTACK_LOGGING_FILE=logs/smoothstack.log
SMOOTHSTACK_LOGGING_MAX_SIZE=10485760
SMOOTHSTACK_LOGGING_BACKUP_COUNT=5 